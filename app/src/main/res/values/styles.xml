<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>
    
    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="ConfirmedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/confirmed_background</item>
    </style>

    <style name="RecoveredCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/recovered_background</item>
    </style>

    <style name="DeathsCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/deaths_background</item>
    </style>

</resources>